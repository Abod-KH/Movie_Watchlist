﻿
@model MovieDisplayModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="container mt-4">
    <form asp-action="Index" method="get" class="row g-3 align-items-center bg-light p-3 rounded shadow-sm">
        <div class="col-md-4">
            <label class="form-label fw-bold" for="genreId">Filter by Genre</label>
            <select class="form-select" id="genreId" name="genreId">
                <option value="0">All Genres</option>
                @foreach (var genre in Model.Genres)
                {
                    <option selected="@(genre.Id == Model.GenreId)" value="@genre.Id">@genre.Name</option>
                }
            </select>
        </div>

        <div class="col-md-5">
            <label class="form-label fw-bold" for="sTerm">Search Movie</label>
            <input type="text" class="form-control" value="@Model.STerm" id="sTerm" name="sTerm"
                placeholder="Enter movie title...">
        </div>

        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary me-2">Search</button>
            <a href="/Home/Index" class="btn btn-secondary">Reset</a>
        </div>
    </form>
    <h2 class="text-center mb-4">Latest Movies</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var movie in Model.Movies)
        {
            <div class="col">
                <div class="card h-100 shadow-sm position-relative">

                    <div class="position-absolute top-0 start-0 m-2" style="z-index: 5;">
                        @if (movie.IsInWatchlist)
                        {
                            <a asp-controller="Watchlist" asp-action="UserWatchlist"
                                class="btn btn-success btn-sm rounded-circle shadow" title="In Watchlist"
                                style="width: 45px; height: 45px;">
                                <i class="bi bi-bookmark-check-fill fs-4"></i>
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Watchlist" asp-action="AddItem" asp-route-movieId="@movie.Movie.Id"
                                class="btn btn-light btn-sm rounded-circle shadow border" title="Add to Watchlist"
                                style="width: 45px; height: 45px;">
                                <i class="bi bi-bookmark-plus text-primary fs-4"></i>
                            </a>
                        }
                    </div>
                    <div class="card h-100 shadow-sm">
                        <a asp-action="Details" asp-route-id="@movie.Movie.Id" class="text-decoration-none">
                            <img src="@movie.Movie.PosterPath" class="card-img-top" alt="@movie.Movie.Title"
                                style="height: 350px; object-fit: cover; cursor: pointer;">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title text-truncate">@movie.Movie.Title</h5>
                            <p class="card-text text-muted">@movie.Movie.ReleaseYear</p>
                            <p class="card-text text-muted">@movie.Movie.Genre.Name</p>
                            @* <p class="card-text text-muted">@movie.Movie.Description</p> *@
                        </div>
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="card-footer bg-white border-top-0 d-flex justify-content-between">
                                <a asp-controller="Admin" asp-action="Edit" asp-route-id="@movie.Movie.Id"
                                    class="btn btn-sm btn-outline-primary">
                                    Edit
                                </a>

                                <form asp-controller="Admin" asp-action="Delete" asp-route-id="@movie.Movie.Id" method="post"
                                    onsubmit="return confirm('Are you sure you want to delete this movie?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            </div>

        }
    </div>

    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-5">
            <ul class="pagination pagination-sm flex-wrap justify-content-center">
                @* Previous *@
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">&laquo;</a>
                </li>

                @{
                    int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                    int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }

                @* Next *@
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">&raquo;</a>
                </li>
            </ul>
        </nav>
    }
</div>